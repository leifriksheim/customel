{
  "name": "customel",
  "version": "0.0.6",
  "description": "A tiny wrapper function to simplify the creation of Custom Elements/Web Components.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "publish": "np",
    "clean": "rimraf dist",
    "dev": "run-p build:es:watch build:iife:watch",
    "build": "run-s clean && run-p build:es build:iife && run-s build:min",
    "build:es": "NODE_ENV=es rollup -c",
    "build:iife": "NODE_ENV=iife rollup -c",
    "build:es:watch": "NODE_ENV=es rollup -c --watch",
    "build:iife:watch": "NODE_ENV=iife rollup -c --watch",
    "build:min": "uglifyjs index.js -c -m -o dist/index.min.js",
    "precommit": "lint-staged"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.3.4",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "lighterhtml": "^0.9.1"
  }
}
